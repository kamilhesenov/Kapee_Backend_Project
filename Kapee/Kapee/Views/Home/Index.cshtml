    <!-- Category start -->
    <section id="category">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="fashion-categories">
                        <div class="fashion-category">
                            <div class="category-heading">
                                <h2>Fashion Categories</h2>
                                <div class="view-all-buton">
                                    <a href="#">View All</a>
                                </div>
                            </div>
                            <div class="category-content">
                                <div class="owl-carousel owl-them">
                                    @foreach (var item in Model.Categories)
                                    {
                                        <div class="item">
                                            <div class="category-product">
                                                <a asp-controller="Category" asp-action="Index" asp-route-id="@item.Id">
                                                    @if (item.Name == "Electronics")
                                                    {
                                                        <img src="~/assets/img/@item.Photo" height="300" alt="">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/assets/img/@item.Photo" alt="">
                                                    }

                                                    <h3>
                                                        @item.Name
                                                        <span>@item.ProductCount Products</span>
                                                    </h3>
                                                </a>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Customer start -->
    <section id="customer" style="background-image: url(assets/img/@Model.TestimonialItem.Photo)">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="our-customer">
                        <div class="customer-header">
                            <div class="customer-title">
                                <h4>@Model.TestimonialItem.Title</h4>
                            </div>
                        </div>
                        <div class="customer-empoty"></div>
                        <div class="customer-testimonial">
                            <div class="customer-slider">
                                <div class="owl-carousel owl-them">
                                    @foreach (var item in Model.Testimonials)
                                    {
                                        <div class="item">
                                            <div class="testimonial">
                                                <div class="testimonial-content">
                                                    <div class="testimonial-detail">
                                                        <i class="fas fa-quote-left"></i>
                                                        @item.Content
                                                        <i class="fas fa-quote-right"></i>
                                                    </div>
                                                    <div class="testimonial-img">
