@model HomeViewModel
@{
    ViewData["Title"] = "Index";
}

<main>
    <!-- Fashion start -->
    <section id="fashion">
        <div class="container-fluid px-0">
            <div class="slider">
                <div class="owl-carousel owl-them">
                    @foreach (var item in Model.FashionSliders)
                    {
                        <div class="item bg-img" style="background-image: url(assets/img/@item.Photo)">
                            <div class="title @item.TextStyleLeft @item.TextStyleRight">
                                <h1>@item.Title</h1>
                                <p><span>@item.Content</span> @item.Description</p>
                                <a href="#">Shop Now</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Category slider start -->
    <section id="category-sliders">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="category-slider-content">
                        <div class="owl-carousel owl-them">
                            @foreach (var item in Model.CategoryCarusels)
                            {
                                <div class="item">
                                    <a href="#">
                                        <div class="category-slider-img">
                                            <img src="~/assets/img/@item.Photo" alt="">
                                        </div>
                                        <div class="category-slider-text">
                                            <p>@item.Name</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 category-corusel">
                    <div class="category-slider-content">
                        <div class="owl-carousel owl-them">
                            @foreach (var item in Model.CategoryCarusels)
                            {
                                <div class="item">
                                    <a href="#">
                                        <div class="category-slider-img">
                                            <img src="~/assets/img/@item.Photo" alt="">
                                        </div>
                                        <div class="category-slider-text">
                                            <p>@item.Name</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Collection start -->
    <section id="collection">
        <div class="container">
            <div class="slider">
                <div class="owl-carousel owl-them">
                    @foreach (var item in Model.CategoryCallections)
                    {
                        <div class="item">
                            <div class="collection-items">
                                <div class="collection-item">
                                    <div class="collection-img">
                                        <img src="~/assets/img/@item.Photo" alt="">
                                    </div>
                                    <div class="collection-text">
                                        <span>@item.Title</span>
                                        <h3>@item.Content</h3>
                                        <a href="#">SHOP NOW</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>

    <!-- Products start -->
    <section id="products">
        <div class="container">
            <div class="slider">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#best-seling" role="tab" aria-selected="true">Best Selling</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fetured" data-toggle="tab" href="#featured" role="tab" aria-selected="false">Featured</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link sale" data-toggle="tab" href="#on-sale" role="tab" aria-selected="false">On Sale</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="best-seling" role="tabpanel" aria-labelledby="home-tab">
                        <div class="owl-carousel owl-them">
                            @{ var ysel = 0; var jsel = 2;}
                            @for (var x = 0; x < Model.Products.Where(x => x.IsFeatured == false && x.IsSale == false).Count(); x += 2)
                            {
                                <div class="item">

                                    @foreach (var item in Model.Products.Where(x => x.IsFeatured == false && x.IsSale == false).Skip(ysel).Take(jsel))
                                    {
                                        <div class="product-group">
                                            <div class="product-item">
                                                <div class="product-img">
                                                    @if (item.IsFeatured == true)
                                                    {
                                                        <div class="product-featured">
                                                            <span>Featured</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="product-featured d-none">
                                                            <span>Featured</span>
                                                        </div>
                                                    }

                                                    <div class="product-button">
                                                        <a href="#" class="add-to-wishlist" data-id="@item.Id" data-toggle="tooltip" data-placement="left" title="Add to Wishlist">
                                                            <i class="far fa-heart"></i>
                                                        </a>
                                                    </div>
                                                    <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">
                                                        @{ var zsel = 1;}
                                                        @foreach (var img in item.ProductGalleries)
                                                        {
                                                            @if (zsel == 1)
                                                            {
                                                                <img data-id=@zsel src="~/assets/img/@img.Photo" alt="">
                                                            }
                                                            else
                                                            {
                                                                <img class="hide-img" data-id=@zsel src="~/assets/img/@img.Photo" alt="">
                                                            }

                                                            zsel++;
                                                        }
                                                        <img class="hover-image hide-img" src="~/assets/img/@item.HoverPhoto" alt="">
                                                    </a>
                                                </div>
                                                <div class="product-text">
                                                    <div class="product-title">
                                                        <div class="product-category">
                                                            <a asp-controller="Category" asp-action="SubCategoryDetail" asp-route-id="@item.SubCategory.Id">@item.SubCategory.Name</a>
                                                        </div>
                                                        <h3 class="product-content">
                                                            <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">@item.Name</a>
                                                        </h3>
                                                        <div class="product-start">
                                                            <div class="@item.StarColor">
                                                                <span>@item.StarCount ★</span>
                                                            </div>
                                                            <div class="rating-counts">
                                                                <a href="#"><span> (@item.RatingCount) </span></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="product-price">
                                                        <span class="price">
                                                            <span>@item.Price.ToString("#.00")</span>
                                                        </span>
                                                        <span class="on-sale">
                                                            <span>@item.OnSale</span>
                                                        </span>
                                                    </div>
                                                    <div class="product-buttons">
                                                        <div class="cart-button">
                                                            <a href="#">Select options</a>
                                                        </div>
                                                        <div class="compare-button">
                                                            <a href="#" data-toggle="tooltip" data-placement="top" title="Compare"><i class="fas fa-random"></i></a>
                                                        </div>
                                                        <div class="search-button">
                                                            <a href="#" data-toggle="tooltip" data-placement="top" title="Quick View"><i class="fas fa-search-plus"></i></a>
                                                        </div>
                                                    </div>
                                                    <div class="product-variations">
                                                        <div class="product-colors">
                                                            @{ int csel = 1;}
                                                            @foreach (var color in item.ProductColors)
                                                            {
                                                                @if (csel == 1)
                                                                {
                                                                    <span data-id=@csel class="product-color active">
                                                                        <span data-toggle="tooltip" data-placement="top" title="@color.Color.Key" class="@color.Color.Value"></span>
                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span data-id=@csel class="product-color">
                                                                        <span data-toggle="tooltip" data-placement="top" title="@color.Color.Key" class="@color.Color.Value"></span>
                                                                    </span>
                                                                }
                                                                csel++;
                                                            }
                                                        </div>
                                                        <div class="product-sizes">
                                                            @{ string active = "active";}

                                                            @foreach (var sizes in item.ProductSizes)
                                                            {
                                                                @if (active == "active")
                                                                {
                                                                    <span class="product-size active">
                                                                        <span>@sizes.Size.Value</span>
                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="product-size">
                                                                        <span>@sizes.Size.Value</span>
                                                                    </span>
                                                                }
                                                                { active = "deactive"; }
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    @{ ysel += 2; }

                                </div>
                            }
                        </div>
