@model IEnumerable<WishListWiewModel>
@{
    ViewData["Title"] = "Index";
}

<!-- Wishlist start -->
<main>
    <!-- Wishlist start -->
    <section id="wihslist">
        <div class="title-page">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>My Wishlist</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <table class="wishlist-table">
                                <thead>
                                    <tr>
                                        <th>
                                            <span></span>
                                        </th>
                                        <th></th>
                                        <th>
                                            <span>Product name</span>
                                        </th>
                                        <th>
                                            <span>Unit price</span>
                                        </th>
                                        <th>
                                            <span></span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td class="product-remove">
                                            <a class="removeProduct" data-id="@item.Id" href="#"><i class="fas fa-trash"></i></a>
                                        </td>
                                        <td class="product-thumbnail">
                                            <a href="#">
                                                <img src="/assets/img/@item.Photo" alt="">
                                            </a>
                                        </td>
                                        <td class="product-name">
                                            <a href="#">@item.Name</a>
                                        </td>
                                        <td class="product-price">
                                            <span>$@item.Price.ToString("#.00")</span>
                                        </td>
                                        <td class="product-add-to-cart">
                                            <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">Select options</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <ul class="d-none">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <div class="item-wrapper">
                                            <div class="product-thumbnail">
                                                <a href="#">
                                                    <img src="/assets/img/@item.Photo" alt="">
                                                </a>
                                            </div>
                                            <div class="item-details">
                                                <div class="product-name">
                                                    <h3>
                                                        <a href="#">@item.Name</a>
                                                    </h3>
                                                </div>
                                                <table class="item-details-table">
                                                    <tbody>
                                                        <tr>
                                                            <td class="label">Price:</td>
                                                            <td class="value">
                                                                <span>$@item.Price.ToString("#.00")</span>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="additional-info-wrapper">
                                            <div class="product-add-to-cart">
                                                <a asp-controller="Product" asp-action="Index" asp-route-id="@item.Id">Select options</a>
                                            </div>
                                            <div class="product-remove">
                                                <a class="deleteProduct" data-id="@item.Id" href="#"><i class="fas fa-times"></i></a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<!-- Wishlist end -->


@section Scripts{

<script>

    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-top-left",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }

    let allRemove = document.querySelectorAll(".removeProduct");
    allRemove.forEach(item => {
        item.addEventListener("click", function () {
            event.preventDefault();
            let id = $(this).attr("data-id");
            toastr.error(`the product has removed from your wishlist`);
            $.ajax({
                url: "/WishList/RemoveItem?Id=" + id,
                type: "Get",
                success: function (res) {
                    console.log(res);
                    
                    let totalCountNav = document.getElementById('totalCount');
                    totalCountNav.innerHTML = res.wishlistProductCount;
                    item.parentElement.parentElement.remove();

                }
            })
        })
    })
</script>

