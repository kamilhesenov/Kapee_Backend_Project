@model IEnumerable<Kapee.Models.Product.ProductPrize>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UserPanel/Views/Shared/_UserLayout.cshtml";
}

<p class="d-flex justify-content-center align-items-center">
    <a class="btn btn-outline-success w-25" asp-action="Create"><i class="fas fa-plus"></i></a>
</p>
<table class="table table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prize)
                </td>
                <td>
                    <a class="btn btn-outline-warning w-75" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-outline-info mt-1 w-75" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                    <a class="btn btn-outline-danger mt-1 w-75" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

