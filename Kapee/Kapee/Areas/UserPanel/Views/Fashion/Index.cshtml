@model IEnumerable<Kapee.Models.Home.FashionSlider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UserPanel/Views/Shared/_UserLayout.cshtml";
}

<p class="d-flex justify-content-center align-items-center">
    <a class="btn btn-outline-success w-25" asp-action="Create"><i class="fas fa-plus"></i></a>
</p>
<table class="table table-striped table-bordered ml-1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextStyleLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextStyleRight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src="~/uploads/@item.Photo" width="200" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextStyleLeft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextStyleRight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
            <tr>
                <td>
                    <a class="btn btn-outline-warning w-75" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                </td>
                <td>
                    <a class="btn btn-outline-info mt-1 w-75" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                </td>
                <td>
                    <a class="btn btn-outline-danger mt-1 w-75" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

