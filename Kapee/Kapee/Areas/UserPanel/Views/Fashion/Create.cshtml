@model Kapee.Models.Home.FashionSlider
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/UserPanel/Views/Shared/_UserLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center">
    <h1>Create</h1>
</div>

<hr />
<div class="row ml-5">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label class="custom-file-label" asp-for="Upload"></label>
                    <input type="file" class="custom-file-input" asp-for="Upload" />
                    <span asp-validation-for="Upload" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <img class="image-preview img-fluid" />
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" type="url" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextStyleLeft" class="control-label"></label>
                <input asp-for="TextStyleLeft" class="form-control" placeholder="if you want to show text on the left you must write (text-style-left)" / >
                <span asp-validation-for="TextStyleLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextStyleRight" class="control-label"></label>
                <input asp-for="TextStyleRight" class="form-control" placeholder="if you want to show text on the right you must write (text-style-right)" />
                <span asp-validation-for="TextStyleRight" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-secondary ml-3" asp-action="Index">Return to Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script>
        $(document).ready(function () {
            $("#Upload").change(function () {
                var file = this.files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    $(".image-preview").attr("src", e.target.result);
                };
                fileReader.readAsDataURL(file, "UTF-8");
            });
        })
    </script>
}

